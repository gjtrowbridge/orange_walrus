<%= render 'shared/error_messages', object: f.object %>

<%=  f.label :name %>
<%=  f.text_field :name, placeholder: "Enter Activity Name (eg. 'Co-ed baseball league')..." %>

<%= f.label :description %>
<%= f.text_area :description, placeholder: "Enter a short description of the activity..." %>

<%= f.label :cost %>
<%= f.text_area :cost, placeholder: "How much does the activity cost?" %>

<%= f.label :location %>
<%= f.text_area :location, placeholder: "Where is the activity located?" %>

<ul class="activity-links">
  <%= f.fields_for :activity_links do |builder| %>
    <%= render partial: 'activity_link_fields', locals: { :builder => builder} %>
  <% end %>
</ul>
